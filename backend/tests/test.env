# 테스트용 환경변수 설정
MONGODB_URL=mongodb://admin:password123@localhost:27017/interview_coach_test
DATABASE_NAME=interview_coach_test

# Celery 설정
CELERY_BROKER_URL=amqp://admin:password123@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=Asia/Seoul

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379

# LLM API 키 (테스트용 더미)
OPENAI_API_KEY=test-openai-key
OPENAI_MODEL=gpt-4.1
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000
OPENAI_TIMEOUT=30

CLAUDE_API_KEY=test-claude-key
CLAUDE_MODEL=claude-3-haiku-20240307
CLAUDE_TEMPERATURE=0.7
CLAUDE_MAX_TOKENS=1000
CLAUDE_TIMEOUT=30

GEMINI_API_KEY=test-gemini-key
GEMINI_MODEL=gemini-1.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=1000
GEMINI_TIMEOUT=30

# 로그 설정
LOG_LEVEL=DEBUG

# 기타 Docker 환경변수 (테스트에서는 무시)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=interview_coach_test
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=password123
